<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_gravity="bottom"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/newactivity_previousBtn"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/newactivityPreviousBtn"
        android:textAllCaps="false"
        android:background="@drawable/round_green_left"/>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000"/>

    <Button
        android:id="@+id/newactivity_nextBtn"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/newactivityNextButton"
        android:textAllCaps="false"
        android:background="@drawable/round_green_right"/>
    <!-- change mycolor to mycolor1 -->

</LinearLayout>
