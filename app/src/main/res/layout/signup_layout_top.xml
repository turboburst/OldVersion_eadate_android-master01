<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_top_layout_height"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:layout_weight="1"
        android:id="@+id/signup_CancelID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="@dimen/activity_top_textsize"
        android:textColor="@color/signup_enterbutton_color"

        android:paddingLeft="@dimen/activity_top_text_leftpadding"
        />

    <TextView
        android:layout_weight="2"
        android:id="@+id/signup_signupID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textSize="@dimen/activity_top_textsize"
        android:textColor="@color/signup_enterbutton_color"
        android:layout_gravity="center"
        android:gravity="left"
        android:paddingLeft="@dimen/activity_top_text_leftpadding"/>

</LinearLayout>